<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='styleTablica.css'>
    <script>
    function Edit(id) {
        window.location.href = "/uredikorisnika?id=" + id;
    }

    function Delete(id) {
        var rs = confirm('Sigurno želite obrisati?');
        if (rs) {
            window.location.href = "/obrisikorisnika?id=" + id;
        }
    }
    function dodaj() {
        var x = document.getElementById("korisnikdodaj");
        if (x.style.display === "none") {
             x.style.display = "flex";
        } else {
        x.style.display = "none";
        }
    }
    </script>
</head>

<body>
    <h1><%= title %></h1>
    <button onclick="dodaj()" class="btn btn-primary">Dodaj Korisnika</button>
    <div style="display:none;width:100%;" id="korisnikdodaj">
    <form name="dodajform" action="dodajKorisnika" method="post" accept-charset="utf-8">
        <h4>Dodaj korisnika</h4>
        <div class="row">
            <label>Ime： </label>
            <input type="text" name="ime" placeholder="Ime">
        </div>
        <div class="row">
            <label>Prezime：</label>
            <input type="text" name="prezime" placeholder="Prezime">
        </div>
        <div class="row">
            <label>ID Uloge：</label>
            <input type="text" name="iduloga" placeholder="ID uloge">
        </div>
        <div class="row">
            <input class="btn" type='submit' value='Submit'>       
        </div>
    </form>
    </div>
    <table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>ID Uloge</th>
            <th>Uloga</th>
            <th>Uredi</th>
        </tr>
    </thead>
            <% for ( var i = 0 ; i < data.length ; i++){ %>
            <tr>
                <td>
                    <%= data[i].id  %>
                </td>
                <td>
                    <%= data[i].ime  %>
                </td>
                <td>
                    <%= data[i].prezime  %>
                </td>
                <td>
                    <%= data[i].uloga_id  %>
                </td>
                <td>
                    <%= data[i].naziv  %>
                </td>
                <td>
                    <input type="button" name="uredikorisnika" value="Uredi" class="btn btn-info" onclick="Edit('<%= data[i].id  %>');" />
                    <input type="button" name="obrisikorisnika" value="Obriši" class="btn btn-danger" onclick="Delete('<%= data[i].id  %>');" />
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>
