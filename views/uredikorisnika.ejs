        <div class="row">
            <label>Ime：</label>
            <input type="text" name="ime" placeholder="Ime" value="<%=data[0].ime  %>" />
        </div>
        <div class="row">
            <label>Prezime：</label>
            <input type="text" name="prezime" placeholder="Prezime" value="<%=data[0].prezime  %>" />
        </div>
        <div class="row">
            <label>ID uloge：</label>
            <input type="text" name="iduloga" placeholder="ID uloge" value="<%=data[0].uloga_id  %>">
        </div>
        <div class="row">
            <input class="btn" type='submit' value='Submit'>
        </div>
    </form>
</body>

</html>
